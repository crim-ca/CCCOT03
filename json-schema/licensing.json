{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Licensing Fields",
  "type": "object",
  "properties": {
    "license": {
      "type": "object",
      "required": [
        "title",
        "description",
        "url"
      ],
      "properties": {
			"title": {
			  "type": "string",
			  "pattern": "^[\\w\\-\\.\\+]+$"
			},
			"description": {
			  "title": "license Description",
			  "description": "Full title.",
			  "type": "string"
			},
          "url": {
            "title": "License url",
            "type": "string",
            "url": "uri"
          }
		}
    }
  }
}
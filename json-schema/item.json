{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "DL Model Item",
	"description": "This object represents the metadata for a DL model item in a DL Catalog.",
	"type": "object",
	"allOf": [
		{
			"$ref": "#/definitions/core"
		}
	],
	"definitions": {
		"common_metadata": {
			"allOf": [
				{
					"$ref": "basics.json"
				},
				{
					"$ref": "input.json"
				},
				{
					"$ref": "licensing.json"
				},
				{
					"$ref": "provider.json"
				},
				{
					"$ref": "scientific.json"
				}
			]
		},
		"core": {
			"allOf": [
				{
					"type": "object",
					"properties": {
						"dl_item_version": {
							"title": "DL Schema version",
							"type": "string",
							"const": "0.1"
						},
						"id": {
							"title": "Provider ID",
							"description": "Provider item ID (useful for a catalog)",
							"type": "string"
						},
						"properties": {
							"$ref": "#/definitions/common_metadata"
						},
						"collection": {
							"title": "Collection ID",
							"description": "The ID of the STAC Collection this Item references to.",
							"type": "string"
						},
						"links": {
							"title": "Item links",
							"description": "Links to item relations",
							"type": "array",
							"items": {
								"$ref": "#/definitions/link"
							}
						},
						"assets": {
							"$ref": "#/definitions/assets"
						}
					},
					"required": [
						"dl_item_version",
						"id",
						"properties",
						"assets",
						"links"
						
					]
				}
			]
		},
		"link": {
			"type": "object",
			"properties": {
				"href": {
					"title": "Link reference",
					"type": "string"
				},
				"rel": {
					"title": "Link relation type",
					"type": "string"
				},
				"type": {
					"title": "Link type",
					"type": "string"
				},
				"title": {
					"title": "Link title",
					"type": "string"
				},
				"created": {
					"$ref": "datetime.json#/definitions/created"
				},
				"updated": {
					"$ref": "datetime.json#/definitions/updated"
				}
			},
			"required": [
				"title",
				"href",
				"rel"
			]
		},
		"assets": {
			"title": "Asset links",
			"description": "Links to assets",
			"type": "object",
			"additionalProperties": {
				"$ref": "#/definitions/asset"
			}
		},
		"asset": {
			"description": "The asset will point to a model archive or a test set",
			"type": "object",
			"properties": {
				"href": {
					"title": "Asset reference",
					"type": "string"
				},
				"title": {
					"title": "Asset title",
					"type": "string"
				},
				"description": {
					"title": "Asset description",
					"type": "string"
				},
				"type": {
					"title": "Asset type",
					"type": "string"
				},
				"role": {
					"title": "Asset role",
					"$comment": "Just two roles",
					"type": "string",
					"enum": [
						"model archive",
						"test data"
					]
				}
			},
			"required": [
				"href",
				"description",
				"type",
				"role"
			]
		}
	}
}
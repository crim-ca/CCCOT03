{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.stacspec.org/v1.0.0-beta.2/item-spec/json-schema/item.json#",
  "title": "DL Model Item",
  "type": "object",
  "description": "This object represents the metadata for a DL model item in a DL Catalog.",
  "allOf": [
    {
      "$ref": "#/definitions/core"
    }
  ],
  "definitions": {
    "common_metadata": {
      "allOf": [
        {
          "$ref": "basics.json"
        },
        {
          "$ref": "datetime.json"
        },
        {
          "$ref": "instrument.json"
        },
        {
          "$ref": "licensing.json"
        },
        {
          "$ref": "provider.json"
        }
      ]
    },
    "core": {
      "allOf": [
        {
          "type": "object",
          "required": [
            "dl_item_version",
            "id",
            "links",
            "assets",
            "properties"
          ],
          "properties": {
            "dl_item_version": {
              "title": "DL Schema version",
              "type": "string",
              "const": "0.1"
            },
            "id": {
              "title": "Provider ID",
              "description": "Provider item ID",
              "type": "string"
            },
            "links": {
              "title": "Item links",
              "description": "Links to item relations",
              "type": "array",
              "items": {
                "$ref": "#/definitions/link"
              }
            },
            "assets": {
              "$ref": "#/definitions/assets"
            },
            "properties": {
              "$ref": "#/definitions/common_metadata"
            },
            "collection": {
              "title": "Collection ID",
              "description": "The ID of the STAC Collection this Item references to.",
              "type": "string"
            }
          }
        }
      ]
    },
    "link": {
      "type": "object",
      "required": [
        "rel",
        "href"
      ],
      "properties": {
        "href": {
          "title": "Link reference",
          "type": "string"
        },
        "rel": {
          "title": "Link relation type",
          "type": "string"
        },
        "type": {
          "title": "Link type",
          "type": "string"
        },
        "title": {
          "title": "Link title",
          "type": "string"
        },
        "created": {
          "$ref": "datetime.json#/definitions/created"
        },
        "updated": {
          "$ref": "datetime.json#/definitions/updated"
        }
      }
    },
    "assets": {
      "title": "Asset links",
      "description": "Links to assets",
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/asset"
      }
    },
    "asset": {
      "type": "object",
      "required": [
        "href"
      ],
      "properties": {
        "href": {
          "title": "Asset reference",
          "type": "string"
        },
        "title": {
          "title": "Asset title",
          "type": "string"
        },
        "description": {
          "title": "Asset description",
          "type": "string"
        },
        "type": {
          "title": "Asset type",
          "type": "string"
        },
        "roles": {
          "title": "Asset roles",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}

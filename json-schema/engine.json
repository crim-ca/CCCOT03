{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Execution environment",
  "description": "Describe the required model input.",
  "type": "object",
  "properties": {
    "engine": {
      "type": "object",
      "required": [
        "name",
        "shape:batch",
        "shape:channels",
        "shape:height",
        "shape:width"
      ],
      "properties": {
			"framework": {
			  "title": "name",
			  "description": "name of the input varaible",
			  "type": "string"
			},
			"version": {
			  "title": "batch size",
			  "description": "tensor batch size",
			  "type": "integer",
			  "minimum": 1
			},
			"model:handler": {
			  "title": "number of channels",
			  "description": "tensor channel dimension",
			  "type": "integer",
			  "minimum": 1
			},
			"model:src": {
			  "title": "image height",
			  "description": "tensor image height",
			  "type": "integer",
			  "minimum": 1
			},
			"docker": {
                "title": "Docker configuration",
                "description": "Describe the docker configuration.",
                "type": "object",
                "properties": {
                    "dockerfile": {
                        "title": "dockerfile",
                        "description": "Link to a dockerfile",
                        "type": "uri"
                    },
                    "imagename": {
                        "title": "Image name",
                        "description": "Image name available on a docker registry",
                        "type": "string"
                    },
                    "gpu": {
                        "title": "gpu flag",
                        "description": "If True, the docker image requires a GPU",
                        "type": "boolean"
                    },
                    "workdir": {
                        "title": "Working directory",
                        "description": "Target directory in the docker instance that can be mapped",
                        "type": "string"
                    },
                    "run": {
                        "title": "Running command",
                        "description": "Running parameters to add to the docker run command",
                        "type": "string"
                    }
                }
			}
		}
    }
  }
}